<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/workbanch_item_plan_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            android:maxEms="8"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@color/maincolor"
            android:text="王经理"/>
        <TextView
            android:id="@+id/workbanch_item_plan_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:textSize="14sp"
            android:text="2016-06-13"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/workbanch_item_plan_tv_action"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="联系大家的拉开放大发啊"/>

    <View
        android:id="@+id/workbanch_item_plan_view_sp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="3dp"
        android:background="@color/lightgrey"/>

</LinearLayout>