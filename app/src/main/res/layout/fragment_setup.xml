<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/section_header_tv_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/all_white"
            android:layout_marginTop="16dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setup_bg_selector"
                android:padding="12dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工号"
                    android:textSize="18sp"
                    android:textColor="@color/all_black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:id="@+id/user_detail_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8001"
                    android:textSize="16sp"
                    android:textColor="@color/setting_text_bg"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgrey"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

            <RelativeLayout
                android:id="@+id/setup_ll_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setup_bg_selector"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:clickable="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:textSize="18sp"
                    android:textColor="@color/all_black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/img_default_head"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgrey"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

            <RelativeLayout
                android:id="@+id/setup_ll_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setup_bg_selector"
                android:padding="12dp"
                android:clickable="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字"
                    android:textSize="18sp"
                    android:textColor="@color/all_black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />

                <TextView
                    android:id="@+id/user_detail_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textSize="16sp"
                    android:textColor="@color/setting_text_bg"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgrey"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />
            <RelativeLayout
                android:id="@+id/setup_ll_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setup_bg_selector"
                android:padding="12dp"
                android:clickable="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机"
                    android:textSize="18sp"
                    android:textColor="@color/all_black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />

                <TextView
                    android:id="@+id/user_detail_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123546484"
                    android:textSize="16sp"
                    android:textColor="@color/setting_text_bg"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgrey"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />
            <RelativeLayout
                android:id="@+id/setup_ll_edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setup_bg_selector"
                android:padding="12dp"
                android:clickable="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱"
                    android:textSize="18sp"
                    android:textColor="@color/all_black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />

                <TextView
                    android:id="@+id/user_detail_tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123546@7moor.com"
                    android:textSize="16sp"
                    android:textColor="@color/setting_text_bg"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/all_white"
            android:layout_marginTop="16dp"
            >
            <RelativeLayout
                android:id="@+id/setup_ll_kefu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setup_bg_selector"
                android:padding="12dp"
                android:clickable="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系客服"
                    android:textSize="18sp"
                    android:textColor="@color/all_black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgrey"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />
            <RelativeLayout
                android:id="@+id/setup_ll_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setup_bg_selector"
                android:padding="12dp"
                android:clickable="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版本更新"
                    android:textSize="18sp"
                    android:textColor="@color/all_black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgrey"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

            <RelativeLayout
                android:id="@+id/setup_ll_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setup_bg_selector"
                android:padding="12dp"
                android:clickable="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textSize="18sp"
                    android:textColor="@color/all_black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/setup_ll_loginoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setup_bg_selector"
            android:padding="12dp"
            android:clickable="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注销登录"
                android:textSize="18sp"
                android:textColor="@color/call_red"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>