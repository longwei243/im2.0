<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/erp_field_radio_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:maxEms="5"
        android:ellipsize="end"
        android:textSize="16sp"
        android:text="字段名"/>

    <RadioGroup
        android:layout_toRightOf="@id/erp_field_radio_tv_name"
        android:id="@+id/erp_field_radio_rg_value"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        </RadioGroup>
    <View
        android:layout_below="@id/erp_field_radio_rg_value"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_erp"/>
</RelativeLayout>