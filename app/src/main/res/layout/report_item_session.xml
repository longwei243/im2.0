<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/workbanch_item_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/report_item_tv_name"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:text="呼入"/>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/report_item_session_time_day"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="日"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/bg_report_callin_day_checked"
                android:textColor="@color/all_white"
                />
            <TextView
                android:id="@+id/report_item_session_time_week"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="周"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/bg_report_callin_week_normal"
                android:textColor="@color/report_callin_time_tv"
                />
            <TextView
                android:id="@+id/report_item_session_time_month"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="月"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/bg_report_callin_month_normal"
                android:textColor="@color/report_callin_time_tv"
                />
        </LinearLayout>
    </RelativeLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/report_item_session_linechart"
        android:layout_width="match_parent"
        android:layout_height="240dp">

    </com.github.mikephil.charting.charts.LineChart>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3,4"
        android:layout_margin="16dp"
        >
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_report_table"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textSize="18sp"
                android:text="时间"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_report_table"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textSize="18sp"
                android:text="人工对话"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_report_table"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textSize="18sp"
                android:text="机器对话"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_report_table"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textSize="18sp"
                android:text="转人工"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/report_item_session_table_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_report_table"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/report_table_content"
                android:textSize="18sp"
                android:text="20160201"/>
            <TextView
                android:id="@+id/report_item_session_table_tv_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_report_table"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="@color/report_table_content"
                android:textSize="18sp"
                android:text="0"/>
            <TextView
                android:id="@+id/report_item_session_table_tv_robot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_report_table"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="@color/report_table_content"
                android:textSize="18sp"
                android:text="0"/>
            <TextView
                android:id="@+id/report_item_session_table_tv_convert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_report_table"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="@color/report_table_content"
                android:textSize="18sp"
                android:text="0%"/>
        </TableRow>
    </TableLayout>

</LinearLayout>