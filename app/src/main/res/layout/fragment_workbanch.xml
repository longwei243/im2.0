<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/workbanch_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_plan"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <View
                    android:id="@+id/view_plan"
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@color/maincolor"/>
                <TextView
                    android:layout_toRightOf="@id/view_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/all_black"
                    android:textSize="20sp"
                    android:text="联系计划"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/rl_plan"
                android:id="@+id/workbanch_ll_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_call"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <View
                    android:id="@+id/view_call"
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@color/maincolor"/>
                <TextView
                    android:layout_toRightOf="@id/view_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/all_black"
                    android:textSize="20sp"
                    android:text="客户通话情况"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/rl_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp"
                            android:text="呼入情况"/>
                        <TextView
                            android:id="@+id/workbanch_callin_tv_timelength"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentRight="true"
                            android:textSize="18sp"
                            android:text="通话时长"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.moor.im.options.mobileassistant.report.view.RoundProgressBar
                            android:id="@+id/rpb_callin"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            app:roundColor="@color/lightgrey"
                            app:roundProgressColor="@color/maincolor"
                            app:textColor="#ED7543"
                            app:roundWidth="6dp"
                            app:textSize="20sp"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:background="@color/maincolor"/>

                            <TextView
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="呼入接听数量"/>

                            <TextView
                                android:id="@+id/workbanch_callin_tv_link"
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/all_black"
                                android:textSize="18sp"
                                android:text="4"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:background="@color/lightgrey"/>

                            <TextView
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="呼入总数"/>

                            <TextView
                                android:id="@+id/workbanch_callin_tv_count"
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/all_black"
                                android:textSize="18sp"
                                android:text="4"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp"
                            android:text="外呼情况"/>
                        <TextView
                            android:id="@+id/workbanch_callout_tv_timelength"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentRight="true"
                            android:textSize="18sp"
                            android:text="通话时长"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.moor.im.options.mobileassistant.report.view.RoundProgressBar
                            android:id="@+id/rpb_callout"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            app:roundColor="@color/lightgrey"
                            app:roundProgressColor="@color/lite_blue"
                            app:textColor="#ED7543"
                            app:roundWidth="6dp"
                            app:textSize="20sp"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:background="@color/lite_blue"/>

                            <TextView
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="外呼接听数量"/>

                            <TextView
                                android:id="@+id/workbanch_callout_tv_link"
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/all_black"
                                android:textSize="18sp"
                                android:text="4"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:background="@color/lightgrey"/>

                            <TextView
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="外呼总数"/>

                            <TextView
                                android:id="@+id/workbanch_callout_tv_count"
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/all_black"
                                android:textSize="18sp"
                                android:text="4"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_count"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <View
                    android:id="@+id/view_count"
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@color/maincolor"/>
                <TextView
                    android:layout_toRightOf="@id/view_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/all_black"
                    android:textSize="20sp"
                    android:text="客户统计"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/rl_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/workbanch_customer_ll_line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/workbanch_customer_ll_line2"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_erp"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <View
                    android:id="@+id/view_erp"
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@color/maincolor"/>
                <TextView
                    android:layout_toRightOf="@id/view_erp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/all_black"
                    android:textSize="20sp"
                    android:text="工单处理"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/rl_erp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/ll_erp_dcl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待处理工单"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/workbanch_erp_tv_dcl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_toRightOf="@id/ll_erp_dcl"
                        android:layout_marginLeft="16dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/workbanch_erp_dcl"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/ll_erp_dlq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待领取工单"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/workbanch_erp_tv_dlq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_toRightOf="@id/ll_erp_dlq"
                        android:layout_marginLeft="16dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/workbanch_erp_dlq"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_mutilchannel"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <View
                    android:id="@+id/view_mutilchannel"
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@color/maincolor"/>
                <TextView
                    android:layout_toRightOf="@id/view_mutilchannel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/all_black"
                    android:textSize="20sp"
                    android:text="多渠道咨询"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/rl_mutilchannel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:id="@+id/id_wechat"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/workbanch_wechat"/>
                    <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_toRightOf="@id/id_wechat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_alignParentLeft="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="微信"
                                />
                            <TextView
                                android:id="@+id/workbanch_webchat_tv_count"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="8条/占比33%"
                                />

                        </RelativeLayout>
                        <ProgressBar
                            android:id="@+id/workbanch_webchat_pb"
                            style="@style/workbanch_wechat_progressBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="0"/>

                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:id="@+id/id_web"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/workbanch_web"/>
                    <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_toRightOf="@id/id_web"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_alignParentLeft="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="网页"
                                />
                            <TextView
                                android:id="@+id/workbanch_pc_tv_count"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="8条/占比33%"
                                />

                        </RelativeLayout>
                        <ProgressBar
                            android:id="@+id/workbanch_pc_pb"
                            style="@style/workbanch_web_progressBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="0"/>

                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:id="@+id/id_app"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/workbanch_app"/>
                    <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_toRightOf="@id/id_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_alignParentLeft="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="APP"
                                />
                            <TextView
                                android:id="@+id/workbanch_app_tv_count"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="8条/占比33%"
                                />

                        </RelativeLayout>
                        <ProgressBar
                            android:id="@+id/workbanch_app_pb"
                            style="@style/workbanch_app_progressBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="0"/>

                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:id="@+id/id_email"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/workbanch_email"/>
                    <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_toRightOf="@id/id_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_alignParentLeft="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="邮件"
                                />
                            <TextView
                                android:id="@+id/workbanch_email_tv_count"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="8条/占比33%"
                                />

                        </RelativeLayout>
                        <ProgressBar
                            android:id="@+id/workbanch_email_pb"
                            style="@style/workbanch_email_progressBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="0"/>

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>