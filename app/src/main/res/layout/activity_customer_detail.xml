<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/customer_detail_cl">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/transparent"
            app:expandedTitleMarginStart="50dp"
            app:expandedTitleGravity="bottom|center_horizontal"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <LinearLayout
                android:id="@+id/customer_detail_ll_cust_type"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/customer_status0"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.6"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <ImageView
                        android:id="@+id/customer_detail_iv_cust_type"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/customer_icon_status0"
                        />

                    <ImageView
                        android:id="@+id/customer_detail_iv_cust_info"
                        android:layout_toLeftOf="@id/customer_detail_iv_cust_type"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/customer_detail_icon_show"
                        />
                    <ImageView
                        android:id="@+id/customer_detail_iv_cust_edit"
                        android:layout_toRightOf="@id/customer_detail_iv_cust_type"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/customer_detail_edit_icon"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/customer_detail_tv_cust_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/all_white"
                        android:textSize="20sp"
                        android:text="北京泾河信息有限公司"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/view_sp"
                        android:layout_centerInParent="true"
                        android:layout_width="1dp"
                        android:layout_height="16dp"
                        android:background="@color/all_white"/>
                    <Spinner
                        android:id="@+id/customer_detail_sp_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/view_sp"
                        android:layout_marginRight="16dp"
                        android:gravity="right"
                        android:background="@null"
                        />
                    <Spinner
                        android:id="@+id/customer_detail_sp_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/view_sp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@null"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/customer_detail_ll_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/customer_detail_tv_cust_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:textSize="16sp"
                        android:textColor="@color/all_white"
                        android:text="大连房价阿里的叫法"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    >

                    <com.moor.im.common.views.roundimage.RoundImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/customer_detail_iv_user_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/img_default_head"/>
                    <TextView
                        android:id="@+id/customer_detail_tv_user_name"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/customer_detail_iv_user_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:maxLines="2"
                        android:layout_marginLeft="16dp"
                        android:ellipsize="end"
                        android:textSize="16sp"
                        android:textColor="@color/all_white"
                        android:text="姓名"/>
                    <TextView
                        android:id="@+id/customer_detail_tv_time"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/customer_detail_tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:maxLines="2"
                        android:layout_marginLeft="16dp"
                        android:ellipsize="end"
                        android:textSize="16sp"
                        android:textColor="@color/all_white"
                        android:text="日期"/>
                </RelativeLayout>

                <View
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/all_white"/>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/customer_iv_phone"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/customer_detail_icon_phone"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView
                            android:layout_below="@id/customer_iv_phone"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/all_white"
                            android:text="电话"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/customer_iv_sms"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/customer_detail_icon_sms"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView
                            android:layout_below="@id/customer_iv_sms"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/all_white"
                            android:text="短信"/>

                        <View
                            android:layout_alignParentLeft="true"
                            android:layout_width="0.5dp"
                            android:layout_height="42dp"
                            android:background="@color/all_white"/>
                        <View
                            android:layout_alignParentRight="true"
                            android:layout_width="0.5dp"
                            android:layout_height="42dp"
                            android:background="@color/all_white"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/customer_iv_email"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/customer_detail_icon_email"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView
                            android:layout_below="@id/customer_iv_email"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/all_white"
                            android:text="邮件"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/maincolor"
                app:layout_collapseMode="pin"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/titlebar_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_back"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        />
                    <TextView
                        android:id="@+id/titlebar_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/all_white"
                        android:text="客户"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            app:tabIndicatorColor="@color/maincolor"
            app:tabSelectedTextColor="@color/maincolor"
            app:tabTextColor="@color/all_black"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.design.widget.TabLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</android.support.design.widget.CoordinatorLayout>