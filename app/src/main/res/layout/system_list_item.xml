<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/system_list_item_iv_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_launcher"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@id/system_list_item_iv_icon"
            android:id="@+id/system_list_item_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/all_black"
            android:text="132132"
            android:gravity="center_horizontal"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:layout_below="@id/system_list_item_tv_time"
            android:layout_toRightOf="@id/system_list_item_iv_icon"
            android:id="@+id/system_list_item_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/all_black"
            android:maxLines="3"
            android:text="adfadf"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgrey"
        />

</LinearLayout>
